{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://example.com/root.json",
  "type": "object",
  "required": [
    "meta",
    "records"
  ],
  "properties": {
    "meta": {
      "$id": "#/properties/meta",
      "type": "object",
      "required": [
        "version",
        "server",
        "recordCount"
      ],
      "properties": {
        "version": {
          "$id": "#/properties/meta/properties/version",
          "type": "string",
          "pattern": "^(.*)$"
        },
        "server": {
          "$id": "#/properties/meta/properties/server",
          "type": "string",
          "pattern": "^(.*)$"
        },
        "recordCount": {
          "$id": "#/properties/meta/properties/recordCount",
          "type": "integer"
        }
      }
    },
    "records": {
      "$id": "#/properties/records",
      "type": "array",
      "items": {
        "$id": "#/properties/records/items",
        "type": "object",
        "required": [
          "id",
          "name",
          "description",
          "enabled",
          "createdAt",
          "updatedAt"
        ],
        "properties": {
          "id": {
            "$id": "#/properties/records/items/properties/id",
            "type": "integer"
          },
          "name": {
            "$id": "#/properties/records/items/properties/name",
            "type": "string",
            "pattern": "^(.*)$"
          },
          "description": {
            "$id": "#/properties/records/items/properties/description",
            "type": "string",
            "pattern": "^(.*)$"
          },
          "enabled": {
            "$id": "#/properties/records/items/properties/enabled",
            "type": "boolean"
          },
          "createdAt": {
            "$id": "#/properties/records/items/properties/createdAt",
            "type": "string",
            "pattern": "^(.*)$"
          },
          "updatedAt": {
            "$id": "#/properties/records/items/properties/updatedAt",
            "type": "string",
            "pattern": "^(.*)$"
          }
        }
      }
    }
  }
}
